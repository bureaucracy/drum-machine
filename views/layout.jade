doctype html
html
  head
    title drum machine
    meta(charset='utf-8')
    meta(content='width=device-width, height=device-height, user-scalable=no, initial-scale=0.8, maximum-scale=0.8, minimum-scale=0.8', name='viewport')
    meta(content='yes', name='apple-mobile-web-app-capable')
    link(rel='stylesheet', href='/css/main.css')
    script(type='text/javascript', src='/js/localforage.js')
    if env !== 'production'
      script(type='text/javascript', src='/js/effects.js')
      script(type='text/javascript', src='/js/sample.js')
      script(type='text/javascript', src='/js/track.js')
      script(type='text/javascript', src='/js/sequencer.js')
      script(type='text/javascript', src='/js/main.js')
    else
      script(type='text/javascript', src='/js/main.min.js')
    if analytics
      != "<script>(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)})(window,document,'script','//www.google-analytics.com/analytics.js','ga');ga('create', '" + analytics + "', 'auto');ga('send', 'pageview');</script>"

  body
    header
      .inner
        a(href='/') drum machine
        button(id='new-track') +
      #actions
        a(href='javascript:;', id='reset') Refresh files
        a(href='javascript:;', id='serialize') Serialize

    #wrapper
      .inner
        .content
          block content
          #footer
            button(id='play') play
            button(id='pause') pause
            label(for='bpm', class='bpm-change') bpm
            input(type='text', id='bpm', value='120')
    footer
      .inner

    #loader
      p Loading audio, please hold ...
